@model Jordan_Green._st10083222._PROG7311._POE._Part_2.Models.FarmerProducts

@{
    ViewData["Title"] = "Create";
}

<h1>Add Products</h1>

<h4>Farmer Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" autocomplete="off" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfProduct" class="control-label"></label>
                <select asp-for="TypeOfProduct" class="control-label">
                    <option value="Dairy">Dairy</option>
                    <option value="Protein">Protein</option>
                    <option value="Vegetables">Vegetables</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="TypeOfProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" autocomplete="off" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" onclick="alert('Saved Product')" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="FarmerUsers" asp-action="Login">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
